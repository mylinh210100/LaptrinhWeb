@model Tieuluan_LTWeb.Models.UserLogin
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/dangnhap.css" rel="stylesheet" />

<div class="text-center">
    <h1 class="title">LOG IN</h1>
</div>
<div class="text-center" style="margin-bottom: 5px;">
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div>
            <div class="group">
                <h3>Username: </h3>
                @Html.TextBoxFor(model => model.Username, new { @class = "input" })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
            <div class="group">
                <h3>Password: </h3>
                @Html.PasswordFor(model => model.Pass, new { @class = "input" })
                @Html.ValidationMessageFor(model => model.Pass, "", new { @class = "text-danger" })
            </div>
            <div class="group">
                <input type="submit" class="btn btn-dang-nhap" value="Log in">
            </div>
            <hr />
            <div>
                <a href="/register" class="have-acc">New Member?</a>
            </div>
        </div>
    }

</div>



