@model Model.Model.TaiKhoan

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1>REGISTER</h1>
</div>
@using (Html.BeginForm("Register", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="login-form">
        <div class="group">
            <h3>Username:</h3>
            @Html.TextBoxFor(model => model.TenTaiKhoan, new { @class = "input" })
            @Html.ValidationMessageFor(model => model.TenTaiKhoan, "", new { @class = "text-danger" })

        </div>
        <div class="group">
            <h3>Password:</h3>
            @Html.PasswordFor(model => model.PassWord, new { @class = "input" })
            @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
        </div>
        <div class="group ">
            <input type="submit" class="button mt-5" value="Sign Up">
        </div>
        <hr />
        <div class="text-center" style="margin-bottom: 5px;">
            <a href="/log-in">
                Have Account Already?
            </a>
        </div>
    </div>
}



