@model IEnumerable<Model.Model.ChuDe>
@{
    ViewBag.Title = "Topic";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<div class="container-fluid">
    <h2>Chủ đề phim</h2>
    <div style="margin-bottom: 10px;">
        <a class="btn-add" href="/topic/insert">Thêm chủ đề</a>
    </div>

    <table class="table table-bordered" style="border:1px solid;">
        <thead class="text-center">
            <tr>
                <th>Id Chủ đề</th>
                <th>Tên chủ đề</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="@item.idChuDe">
                    <td>@item.idChuDe</td>
                    <td>@item.tenChuDe</td>
                    <td><a href="/topic/topic-film/@item.idChuDe">Chi tiết</a></td>
                </tr>
            }
        </tbody>
    </table>

</div>
