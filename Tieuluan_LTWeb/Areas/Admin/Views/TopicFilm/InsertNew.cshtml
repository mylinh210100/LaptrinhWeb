@model Model.Model.ChuDe

@{
    ViewBag.Title = "InsertNew";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<h2>Thêm chủ đề</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.tenChuDe, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tenChuDe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tenChuDe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn" style="border-color:#ff0000 ; margin: 10px;" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "Topic")
</div>
